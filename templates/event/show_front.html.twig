{% extends 'base-front.html.twig' %}
{% block title %}event{% endblock %}
{% block body %}

<!-- Hero Section-->
<section class="pt-7 pb-5 d-flex align-items-end dark-overlay bg-cover" style="background-image: url('{{ asset("img/eventum.png") }}');">
    <div class="container overlay-content">
        <div class="d-flex justify-content-between align-items-start flex-column flex-lg-row align-items-lg-end">
            <div class="text-white mb-4 mb-lg-0">
                <div class="badge badge-pill badge-transparent px-3 py-2 mb-4">{{ event.categorie }}</div>
                <h1 class="text-shadow verified">{{ event.nom }}</h1>
                <p><i class="fa-map-marker-alt fas mr-2"></i> {{ event.lieu }}</p>
                <p class="mb-0 d-flex align-items-center"><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-gray-200 mr-4">   </i></p>
            </div>
            <div class="calltoactions"><a class="btn btn-primary"  href="{{ path('calendarr_contoroller_new', {'id': event.id}) }}"  >Participer</a></div>


        </div>
    </div>
</section>
    <section class="py-6 bg-gray-100">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-8">

                    <h2>Images</h2>
                </div>

            </div>
            {% for image in event.images %}
                <div class="row">
                    <div class="d-flex align-items-lg-stretch mb-4 col-lg-8">
                        <div class="card shadow-lg border-0 w-100 border-0 hover-animate" style="background: center center url({{ asset('/upload/' ~ image.nom) }}) no-repeat; background-size: cover;">
                            <div class="d-flex align-items-center h-100 text-white justify-content-center py-6 py-lg-7">

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
<section class="py-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- About Listing-->
                <div class="text-block">
                    <h3 class="mb-3">Description</h3>
                    <p class="text-muted">{{ event.description }}</p>
                 </div>


            </div>
        </div>



            </div>
            <div class="col-lg-4" >
                <div class="pl-xl-4">
                    <!-- Opening Hours      -->
                    <div class="card border-0 shadow mb-5">
                        <div class="card-header bg-gray-100 py-4 border-0">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <p class="subtitle text-sm text-primary">DATE</p>
                                    <h4 class="mb-0">d'évènement</h4>
                                </div>
                                <svg class="svg-icon svg-icon svg-icon-light w-3rem h-3rem ml-3 text-muted">
                                    <use xlink:href="#wall-clock-1"> </use>
                                </svg>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table text-sm mb-0">
                                <tr>
                                    <th class="pl-0 border-0">Debut d'évènement </th>
                                    <td class="pr-0 text-right border-0">{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th class="pl-0">Fin d'évènement</th>
                                    <td class="pr-0 text-right">{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>


        </div>
    </div>
</section>

{% endblock %}
