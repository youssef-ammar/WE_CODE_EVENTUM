
{% extends 'base-back.html.twig' %}

{% block title %}Event{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="color:#FFA500"  class="card-title"> Liste des évènements</h4>
                        <a href="{{ path('event_new') }}" type="button" class="btn btn-warning btn-fw">+ AJOUTER</a>

                        <ul class="navbar-nav w-100">
                            <li class="nav-item w-100">
                                <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                                    <input type="text" id="myInput" alt="" onkeyup="myFunction()" class="form-control" placeholder="Chercher partenaire">
                                </form>
                            </li>
                        </ul>
                        <div id="myTable" class="table-responsive">
                            <table class="table" class="table table-striped">
                                <thead>
                                <tr>

                                    <th>Nom</th>
                                    <th>Date_debut</th>
                                    <th>Date_fin</th>
                                    <th>Lieu</th>

                                    <th>Prix</th>

                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td>{{ event.nom }}</td>
                                        <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                                        <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                                        <td>{{ event.lieu }}</td>
                                        <td>{{ event.prix }}</td>
                                        <td><label class="badge badge-danger"> <a href="{{ path('event_delete', {'id': event.id}) }}"><i class="mdi mdi-delete"></i></a></label><label class="badge badge-info"><a href="{{ path('event_edit', {'id': event.id}) }}"><i class="mdi mdi-table-edit"></i></a></label><label class="badge badge-warning"><a href="{{ path('event_show', {'id': event.id}) }}"><i class="mdi mdi-information-outline"></i></a></label></td>

                                    </tr>

                                {% else %}
                                    <tr>
                                        <td colspan="3">tableau vide</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            {{ knp_pagination_render(events) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}