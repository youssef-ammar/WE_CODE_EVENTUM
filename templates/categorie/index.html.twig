
{% extends 'base-back.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}
{% block title %}Categorie index{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="color:#FFA500"  class="card-title"> Liste des categorie</h4>

                        <ul class="navbar-nav w-100">
                            <li class="nav-item w-100">
                                <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                                    <input type="text" id="myInput" alt="" onkeyup="myFunction()" class="form-control" placeholder="Chercher partenaire">
                                </form>
                            </li>
                        </ul>
                        <div id="myTable" class="table-responsive">
                            <table class="table" class="table table-striped">
                                <thead>
                                <tr>
                                    <th> Nom categorie </th>
                                    <th> Action </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for categorie in categories %}
                                    <tr>

                                        <td>{{ categorie.nom }}</td>


                                        <td><label class="badge badge-danger"> <a href="{{ path('categorie_delete', {'id': categorie.id}) }}"><i class="mdi mdi-delete"></i></a></label><label class="badge badge-info"><a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="mdi mdi-table-edit"></i></a></label><label class="badge badge-warning"><a href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="mdi mdi-information-outline"></i></a></label></td>



                                    </tr>

                                {% else %}
                                    <tr>
                                        <td colspan="3">tableau vide</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}