{% extends 'base-back.html.twig' %}

{% block title %}ReservationCamp index{% endblock %}

{% block body %}
    <form method="POST">
        <input type="text" name="camping">
        <input type="submit" value="recherche"></form>


    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="color:#FFA500"  class="card-title"> Liste des r√©servations</h4>

                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>DateRes</th>

                                <th>camping</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation_camp in reservation_camps %}
                                <tr>
                                    <td>{{ reservation_camp.id }}</td>
                                    <td>{{ reservation_camp.dateRes ? reservation_camp.dateRes|date('Y-m-d') : '' }}</td>

                                    <td>{{ reservation_camp.camping }}</td>
                                    <td>
                                        <a  href="{{ path('reservation_camp_show', {'id': reservation_camp.id}) }}" type="button" class="btn btn-info">info</a>
                                        <a  href="{{ path('res_delete', {'id': reservation_camp.id}) }}" type="button" class="btn btn-danger">Supprimer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
