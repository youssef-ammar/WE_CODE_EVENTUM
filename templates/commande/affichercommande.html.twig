{% extends 'base-back.html.twig' %}

{% block body %}
    <section>
    <section>
    <div class="page-header">
        <div class="container-fluid">
            <h2 style="color:#ffa500"  class="h5 no-margin-bottom">Gestion des Commandes</h2>
        </div>
    </div>
    </section>


    <br><br>

    <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
        <button class="btn btn-success btn-icon-split" ><a href="{{ path('ajoutercommande')  }}"><span class="text" style="color: white">Ajouter </span></a></button>

    <table class="table table-bordered" id="t"  width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>  </th>
            <th>  </th>
            <th>id  </th>
            <th>Nom utilisateur</th>
            <th>adress</th>
            <th>tel</th>
            <th>date</th>
            <th> nom produit</th>
        </tr>
        </thead>

        <tbody id="myTable">


        {% for i in tablecommandes %}
            <tr>

                <td>  <a href="{{ path('modifiercommande',{'id': i.id}) }}"  class="btn btn-info btn-icon-split">
                                            <span class="icon text-white-50">
                        <i class="fas fa-info-circle"></i>

                    </span>
                        <span class="text">Modifier</span>

                    </a></td>

                <td><a href="{{ path('supprimercommande',{'id': i.id}) }}"><img src="https://img.icons8.com/color/48/000000/trash--v2.png"/></a></td>

                <td>{{ i.id  }}</td>
                <td>{{ i.nomutilisateur	}}</td>
                <td>{{ i.adress }}</td>
                <td>{{ i.tel	  }}</td>
                <td>{{(i.date).format('d/m/Y')}}</td>
                <td> {{ i.produit}}</td>
            </tr>

        {% endfor %}


        </tbody>
        <tbody id="search">
        </tbody>

    </table>

    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}



