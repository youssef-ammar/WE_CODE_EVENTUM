                                <div class="icon-rounded icon-rounded-sm bg-primary-light mr-2">
                                    <svg class="svg-icon text-primary svg-icon-md">
                                        <use xlink:href="#diploma-1"> </use>
                                    </svg>
                                </div>
                                <div class="media-body">
                                    <p class="mb-0">4 événements</p>
                                </div>
                            </div>
                            <div class="media align-items-center mb-3">
                                <div class="icon-rounded icon-rounded-sm bg-primary-light mr-2">
                                    <svg class="svg-icon text-primary svg-icon-md">
                                        <use xlink:href="#checkmark-1"> </use>
                                    </svg>
                                </div>
                                <div class="media-body">
                                    <p class="mb-0">Verified</p>
                                </div>
                            </div>
                            <hr>


                            <li class="nav-item mt-3 mt-lg-0 ml-lg-3 d-lg-none d-xl-inline-block"><a class="btn btn-primary" href="{{ path('add_part') }}">Ajouter un évènements</a></li>

                        </div>
                    </div>
                </div>
