{% extends 'base-back.html.twig' %}

{% block body %}


    <div class="main-panel">
        <div class="content-wrapper">



            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 style="color:#FFA500" class="card-title"> Ajouter un produit</h4>

                        <form class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputName1">Nom</label>
                                <input type="text" class="form-control" id="exampleInputName1" placeholder="Nom">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Code</label>
                                <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">
                            </div>

                            <div class="form-group">
                                <label for="exampleSelectGender">Type</label>
                                <select class="form-control" id="exampleSelectGender">
                                    <option>type1 </option>
                                    <option>type2</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <input type="file" name="img[]" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled placeholder="Image">
                                    <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                          </span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="exampleTextarea1">Description</label>
                                <textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>
                            </div>
                            <button class="btn btn-warning btn-fw"type="submit" class="btn btn-primary mr-2">Ajouter</button>
                            <button class="btn btn-dark">Annuler</button>
                        </form>
                    </div>
                </div>
            </div>




        </div>
    </div>
{% endblock %}